<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_battle">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_battle"
        android:layout_width="370dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_point"
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@id/card_view_battle"
            app:layout_constraintBottom_toBottomOf="@id/card_view_battle"
            app:layout_constraintStart_toStartOf="@id/card_view_battle"
            app:layout_constraintEnd_toEndOf="@id/card_view_battle"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="700"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toTopOf="@id/card_view_battle"
            app:layout_constraintBottom_toBottomOf="@id/card_view_battle"
            app:layout_constraintStart_toStartOf="@id/point"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puan"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toTopOf="@id/card_view_battle"
            app:layout_constraintBottom_toBottomOf="@id/card_view_battle"
            app:layout_constraintStart_toStartOf="@id/point"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 15"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="265dp"
            app:layout_constraintTop_toTopOf="@id/card_view_battle"
            app:layout_constraintBottom_toBottomOf="@id/card_view_battle"
            app:layout_constraintStart_toStartOf="@id/level"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group_1"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="@id/card_view_battle"
            app:layout_constraintEnd_toEndOf="@id/card_view_battle"
            app:layout_constraintTop_toTopOf="@id/card_view_battle" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_level"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="@id/card_view_battle"
            app:layout_constraintEnd_toEndOf="@id/card_view_battle"
            app:layout_constraintTop_toTopOf="@id/card_view_battle" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/people_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_people"
        app:layout_constraintTop_toBottomOf="@id/card_view_battle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/battle_firs_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İki Oyuncu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/people_img"
        app:layout_constraintTop_toBottomOf="@id/people_img"
        android:textColor="@color/active_color"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/button_card_view"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/active_color"
        app:layout_constraintTop_toBottomOf="@id/battle_firs_text"
        app:layout_constraintStart_toStartOf="@id/battle_firs_text"
        app:layout_constraintEnd_toEndOf="@id/battle_firs_text"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şimdi Oyna"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="55dp"
        app:layout_constraintTop_toTopOf="@id/button_card_view"
        app:layout_constraintBottom_toBottomOf="@id/button_card_view"
        app:layout_constraintStart_toStartOf="@id/button_card_view"
        app:layout_constraintEnd_toEndOf="@id/button_card_view"
        />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/page_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/woman_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_woman"
        app:layout_constraintTop_toBottomOf="@id/page_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/battle_second_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tek Oyuncu"
        android:layout_marginTop="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/people_img"
        app:layout_constraintTop_toBottomOf="@id/battle_firs_text"
        android:textColor="@color/main_text_color_dark"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/button2_card_view"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#FFFBFB"
        app:layout_constraintTop_toBottomOf="@id/battle_second_text"
        app:layout_constraintStart_toStartOf="@id/battle_second_text"
        app:layout_constraintEnd_toEndOf="@id/battle_second_text"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şimdi Oyna"
            android:textColor="@color/main_text_color_dark"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="55dp"
            app:layout_constraintTop_toTopOf="@id/button_card_view"
            app:layout_constraintBottom_toBottomOf="@id/button_card_view"
            app:layout_constraintStart_toStartOf="@id/button_card_view"
            app:layout_constraintEnd_toEndOf="@id/button_card_view"
            />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>